# EditorConfig helps maintain consistent coding styles across different editors and IDEs
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# JavaScript/TypeScript
[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 2
end_of_line = lf

# Python
[*.py]
indent_size = 4

# Go
[*.go]
indent_style = tab
indent_size = 4

# Rust
[*.rs]
indent_size = 4

# Makefile
[Makefile]
indent_style = tab

# HTML/CSS
[*.{html,css,scss,sass,less}]
indent_size = 2

# Configuration files
[*.{toml,ini,cfg}]
indent_size = 2

# Package files
[{package.json,package-lock.json,bun.lockb,*.lock}]
indent_size = 2

# Ignore build output and dependencies
[{dist/**,build/**,node_modules/**,.next/**,.nuxt/**}]
indent_size = unset
indent_style = unset
