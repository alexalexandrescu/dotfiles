{
  "metadata": {
    "version": "2.0.0",
    "last_updated": "2024-12-19",
    "supported_platforms": ["macos", "ubuntu"]
  },
  "symlinks": {
    "defaults": {
      "relink": true,
      "create": true,
      "force": true
    },
    "clean": ["~"],
    "links": {
      "~/.zshrc": "shared/.zshrc",
      "~/.aliases": "shared/.aliases",
      "~/.modern-aliases": "shared/.modern-aliases",
      "~/.env-detection": "shared/.env-detection",
      "~/.gitconfig": "shared/.gitconfig",
      "~/.gitignore_global": "shared/.gitignore_global",
      "~/.npmrc": "shared/.npmrc",
      "~/.nvmrc": "shared/.nvmrc",
      "~/.vimrc": "shared/.vimrc",
      "~/.tmux.conf": "shared/.tmux.conf",
      "~/.config/micro/settings.json": "shared/.microrc"
    },
    "directories": [
      "~/.config/micro"
    ],
    "shell_commands": [
      {
        "command": "git config --global core.excludesfile ~/.gitignore_global",
        "description": "Setting up global gitignore"
      }
    ]
  },
  "categories": {
    "development": {
      "description": "Core development tools",
      "priority": 1,
      "packages": [
        {
          "name": "git",
          "macos": "git",
          "ubuntu": "git",
          "required": true
        },
        {
          "name": "curl",
          "macos": "curl",
          "ubuntu": "curl",
          "required": true
        },
        {
          "name": "wget",
          "macos": "wget",
          "ubuntu": "wget",
          "required": true
        },
        {
          "name": "jq",
          "macos": "jq",
          "ubuntu": "jq",
          "required": true
        },
        {
          "name": "tree",
          "macos": "tree",
          "ubuntu": "tree",
          "required": false
        }
      ]
    },
    "runtime": {
      "description": "Language runtimes and package managers",
      "priority": 2,
      "packages": [
        {
          "name": "nvm",
          "macos": null,
          "ubuntu": null,
          "description": "Node Version Manager",
          "required": true
        },
        {
          "name": "bun",
          "macos": "bun",
          "ubuntu": "bun",
          "description": "Fast JavaScript runtime and toolkit",
          "required": true
        }
      ]
    },
    "modern_cli": {
      "description": "Modern CLI tools",
